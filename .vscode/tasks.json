{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & debug file",
            "type": "process",
            "command": "g++",
            "args": [
            "-g",
            "-o",
            "${fileBasenameNoExtension}",
            "${file}",
            "-Wl,--stack=268435456"
            "-fexec-charset=GBK",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build & run file",
            "type": "process",
            "command": "g++",
            "args": [
            "-o",
            "${fileBasenameNoExtension}",
            "${file}",
            "-Wl,--stack=268435456"
            "-fexec-charset=GBK",
            ],
            "group": {
            "kind": "build",
            "isDefault": true
            }
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ] 
}